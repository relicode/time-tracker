{
  "name": "time-tracker",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run lint:prettier && ava",
    "lint": "concurrently --prefix-colors auto --kill-others-on-fail 'npm:lint:*'",
    "lint:eslint": "next lint",
    "lint:prettier": "npm run prettier -- --check",
    "prettier": "prettier .",
    "prettier:format": "npm run prettier -- --write"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "ink": "^4.1.0",
    "ink-spinner": "^5.0.0",
    "meow": "^11.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/react": "^18.0.32",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "ink-testing-library": "^3.0.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.0.3",
    "typescript-eslint": "^8.39.1"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
